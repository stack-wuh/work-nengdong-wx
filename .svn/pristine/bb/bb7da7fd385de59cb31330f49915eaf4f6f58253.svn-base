/* pages/map/firend/firend.wxss */
.icon-search-g,
.icon-menu-g{
  width:30rpx;
  height:26rpx;
}
.avatar{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}
.icon-collect{
  width:40rpx;
  height:37rpx;
}
.icon-search{
  width:31rpx;
  height:30rpx;
  margin-right:10rpx;
}
.act-wrapper-header{
  position: fixed;
  top:0;
  left:0;
  justify-content: space-between;
}
.act-wrapper-header .act-wrapper-nav{
  border-radius: 22rpx;
}
.father{
  height:100%;
  padding:15rpx 20rpx;
}
.father .item-content{
  display: flex;
  align-items: center;
  justify-content:space-between;
  min-height:227rpx;
  background-color: #fff;
  margin-bottom:15rpx;
}
.father .item-content .img-box{
  width:120rpx;
  height:120rpx;
}
.father .item-content .right-content{
  flex:1;
  height:100%;
  padding:30rpx 20rpx;
  font-size: 26rpx;
  color: #999;
  box-sizing: border-box;
}
.father .item-content .right-content > view{
  margin-bottom:10rpx;
  white-space: nowrap;
  overflow: hidden;
}
.father .item-content .right-content text:nth-child(2n){
  margin-right:20rpx;
  color: #333;
}
.flex-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.flex-box .empty-box{
  flex:1;
}
.pedding-text{
  padding:0 10rpx;
  border-radius: 4rpx;
  color: #0E90F5;
  border:1px solid #0E90F5;
}
.pedding-up{
  color: #9487FB;
  border-color: #9487FB;
}
.pedding-up-school{
  color: #FF8888;
  border-color: #FF8888;
}


.menu-slide{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  transform: translateX(100%);
  background-color: rgba(0,0,0,.5);
}
.menu-slide .menu-content{
  float: right;
  width:90%;
  height:100%;
  background-color: #fff;
}
.menu-slide .menu-content .menu-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom:20rpx;
  padding:20rpx;
  font-size: 25rpx;
  color: #999;
  box-sizing: border-box;
  border-bottom:1px solid #e4e4e4;
}
.menu-header text:nth-child(2n){
  font-size: 30rpx;
  color: #333;
}
.menu-list{
  margin-bottom:15rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}
.menu-list .menu-name{
  margin-bottom:10rpx;
  font-size: 28rpx;
  color: #333;
}
.menu-list .menu-option-list{
  display: flex;
  align-items: center;
  flex-flow: wrap;
}
.menu-list .menu-option{
  display: inline-block;
  height:44rpx;
  padding:0 10rpx;
  margin-right:20rpx;
  margin-bottom:20rpx;
  text-align:center;
  line-height:44rpx;
  font-size: 24rpx;
  color: #999;
  border:1px solid #999;
  border-radius: 4rpx;
}