/* pages/activity/detail/index.wxss */
.prev-pass{
  width:380rpx;
  height:315rpx;
}
.icon-close-white{
  position: absolute;
  right:50rpx;
  top:-115rpx;
  width:50rpx;
  height:50rpx;
}
.bg-white-line{
  position: absolute;
  right:75rpx;
  top:-65rpx;
  width:1rpx;
  height:65rpx;
  border-right:1px solid white;
}
.card-list{
  width:100%;
  padding:30rpx 40rpx 20rpx 40rpx;
  margin-bottom:15rpx;
  font-size: 24rpx;
  color: #999;
  background-color: #fff;
  box-sizing: border-box;
}
.card-list:first-of-type .list-item > view{
  display: flex;
  align-items: center;
}
.list-item-first{
  font-size: 30rpx;
} 
.list-item-first > text{
  color: #333;
  margin-right:30rpx;
}
.list-item-first + view{
  margin:18rpx 0 23rpx 0;
}
.list-item-last > view{
  display: flex;
  align-items: center;
}
.list-item-last view:first-of-type{
  display: inline-block;
  padding-right:20rpx;
  border-right:1px solid #ADADAD;
}
.list-item-last view:nth-child(2){
  flex:1;
  padding-left:20rpx;
}
.card-list .card-list-item{
  /* padding:25rpx 0 18rpx 0; */
  padding-bottom:18rpx;
  border-bottom:1px solid #eee;
}
.card-list .card-list-item > view:first-of-type{
  margin-top:20rpx;
  margin-bottom:10rpx;
  color:#333;
  font-size: 26rpx;
}
.card-list .card-list-item:first-of-type view:first-of-type{
  margin-top:0;
}
.no-bottom{
  margin-bottom:0;
  border-bottom:1px solid #eee;
}
.no-border{
  border-bottom:none !important;
}
.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 1.5rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  color: #666 !important;
}
.bg-g{
  color: #999;
  background: #E6F3F9;
}
.th {
  width: 30%;
  justify-content: center;
  color: #ccc;
  display: flex;
  height: 1rem;
  align-items: center;
}

.btn-more{
  margin:40rpx 80rpx;
  text-align: center;
  color: #00978B;
}
.btm-btn-list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height:90rpx;
  padding:5rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #fff;
}
.btm-btn-list text{
  display: inline-block;
  width:144rpx;
  height:80rpx;
  text-align: center;
  line-height:80rpx;
  border:1px solid #009488;
  border-radius: 4rpx;
}
.btm-btn-list text:last-of-type{
  width:357rpx;
  color: #fff;
  background-color: #009488;
}
.actioned{
  margin-top:15rpx;
  padding-top:30rpx;
  margin-bottom:76rpx;
}
.actioned text:last-of-type{
  width:524rpx;
}
/*定义title状态*/
.act-top-title{
  display: inline-block;
  width:124rpx;
  height:40rpx;
  color: #fff;
  text-align: center;
  line-height:40rpx;
  border-radius: 4rpx;
}
.friend{
  font-size: 26rpx;
  background-color: #FABC50;
}
.school{
  color: #fff !important;
  font-size: 26rpx;
  background-color: #8FCD52 !important;
}
.college{
  font-size: 26rpx;
  background-color: #FF8888;
}
.classify{
  font-size: 26rpx;
  background-color: #9487FB;
}
.txt-empty{
  color:#009488;
}

.act-ing{
  color: #0E90F5;
}
.act-end{
  color: #999999;
}