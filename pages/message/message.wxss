.avatar{
  width:150rpx;
  height:150rpx;
}
.search-box{
  height:120rpx;
  color: #666;
  background-color: #E8F0F0;
}
.icon-search{
  width:31rpx;
  height:30rpx;
  margin-right:20rpx;
  order:-1;
}
.nav-list{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-flow: wrap;
  width:100%;
  margin-top:20rpx;
  padding:10rpx 30rpx;
  padding-left:40rpx;
  padding-top:30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border:none;
  background-color: #fff;
}

.nav-list .nav-title{
  display: inline-block;
  flex:0 0 30%;
  height:60rpx;
  margin-bottom:20rpx;
  margin-right:15rpx;
  line-height:60rpx;
  text-align:center;
  border:1px solid #eee;
}
.active{
  border-color: #00998d !important;
}

.list{
  margin-top:10rpx;
}
.list-item{
  display: flex;
  align-items: center;
  min-height:220rpx;
  padding:0 20rpx;
  border-bottom:1px solid #eee;
  background-color: #fff;
}
.list-item .img-box{
  margin-right:15rpx;
}
.list-item .item-right{
  font-size: 28rpx;
}
.list-item .item-right text{
  color: #999;
}
.list-item .item-right view{
  
}
.form-msg{
  text-align:center;
  margin-bottom:0px !important;
  padding-bottom:20rpx;
}