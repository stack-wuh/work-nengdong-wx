/* pages/map/collect/collect.wxss */
.container{
  padding-top: 124rpx;
}
.avatar{
  width:200rpx;
  height:160rpx;
}
.nav-box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.nav-list{
  width:690rpx;
}
.nav-list .nav-list-item:nth-child(2){
  border-left: 1px solid #00998d;
  border-right:1px solid #00998d;
}
.list-item{
  display: flex;
  align-items: center;
  justify-content:space-between;
  padding:30rpx 35rpx;
  margin-top:15rpx;
  background-color: #fff;
}
.list-item .img-box{
  width:200rpx;
  height:160rpx;
}
.list-item .right-content{
  flex:1;
  height:160rpx;
  padding-left:15rpx;
  font-size: 24rpx;
  color: #999;
  box-sizing: border-box;
  overflow: hidden;
}
.list-item .right-content > view{
  margin:5rpx 0; 
}
.list-item .right-content > view:first-of-type{
  font-size: 26rpx;
}
.list-item .right-content > view:nth-child(2){
  color: #333;
  font-size: 30rpx;
}
.list-item1 .img-box{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  overflow: hidden;
}
.list-item .img-box .avatar-radius{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}
.list-item1 .right-content{
  height:100%;
}
.list-item1 .right-content > view{
  margin:10rpx;
  font-size: 26rpx !important;
}
.list-item1 .right-content > view >text:nth-child(2n){
  margin-right:20rpx;
  color: #333 !important;
}
.list-item1 .right-content > view > text:nth-child(2n-1){
  color: #999;
}
.pedding-text{
  padding:0 5rpx;
  border-radius: 4rpx;
  color: #0E90F5 !important;
  border:1px solid #0E90F5;
}
.pedding-up{
  color: #9487FB !important;
  border-color: #9487FB !important;
}
.pedding-up-school{
  color: #FF8888 !important;
  border-color: #FF8888 !important;
}
.over-text{
  flex:1;
}


.list-content{
  height:100%;
  background-color: #fff;
}
.list-content .list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:20rpx 30rpx 20rpx 40rpx;
  font-size: 30rpx;
}
.list-content .list-item .tips{
  display: inline-block;
  width:32rpx;
  height:32rpx;
  margin-right:20rpx;
  text-align: center;
  line-height:30rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #5094FA;
  border-radius: 50%;
}
.list-content .list-item .list-name{
  flex:1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right:20rpx;
}
.list-content .list-item .list-name text:nth-child(2){
  flex:1;
  margin:0 10rpx;
  padding: 0 5rpx;
  text-align: center;
  overflow: hidden;
}