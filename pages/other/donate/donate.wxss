/* pages/other/donate/donate.wxss */
.icon-prise{
  margin-right:15rpx;
}
.icon-close-white{
  position: absolute;
  right:15rpx;
  top:-120rpx;
  width: 50rpx;
  height:50rpx;
}
.top-msg{
  padding:20rpx 30rpx;
  color: #00978b;
  font-size: 24rpx;
  background-color: #fff;
}
.top-msg > text{
  display: block;
  width: 681rpx;
  height:90rpx;
  padding:10rpx 15rpx 10rpx 30rpx;
  background-color:RGBA(239, 250, 250, 1);
  border:1px solid #00978d;
  letter-spacing: 1rpx;
  border-radius: 4rpx;
  box-sizing: border-box;
}
.list-content{
  margin-top:20rpx;
  padding:10rpx 30rpx 0 30rpx;
  background-color: #fff;
}
.list-item{
  display: flex;
  align-items: center;
  padding:20rpx 0;
  border-bottom:1px solid #eee;
}
.list-item:last-child{
  border-bottom: 0;
}
.list-item .img-content{
  width: 210rpx;
  height:156rpx;
  overflow: hidden;
  border-radius: 4rpx;
}
.list-item .img-content .avatar{
  width: 210rpx;
  height:156rpx;
}
.list-item .right-content{
  flex:1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: space-between;
  height:140rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  overflow: hidden;
}
.list-item .right-content > view:first-of-type{
  font-size: 30rpx;
  color: #333;
}
.list-item .right-content > view:nth-child(2){
  font-size: 26rpx;
  color: #666;
}
.list-item .right-content > view:last-of-type{
  font-size: 24rpx;
  color: #999;
}
.dialog-box{
  position: relative;
  top:20%;
  width: 468rpx;
  /* height:567rpx; */
  margin:0 auto;
  padding-bottom:30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.dialog-box .dialog-head{
  height:100rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #009489;
  text-align: center;
  line-height:100rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.dialog-box .dialog-item{
  display: flex;
  align-items: flex-start;
  padding:15rpx 30rpx;
  font-size: 24rpx;
  color: #666;
}
.dialog-box .dialog-item > text:first-of-type{
  width: 80rpx;
  color: #333;
  font-weight: bold;
}
.dialog-box .dialog-item > view{
  flex:1;
}
.cutline{
  position: absolute;
  top: -70rpx;
  right: 38rpx;
  width: 1px;
  height:72rpx;
  border-right: #fff;
  background-color: #fff;
}